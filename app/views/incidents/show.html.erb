<p id="notice"><%= notice %></p>

<h1>
  <span class="text-muted lead">#<%= @incident.id %></span>
  <%= @incident.title %>
</h1>

<p class="lead">
  <%= @incident.description %>
</p>

<p>
  <strong>Severity:</strong>
  <%= incident_severity_label(@incident) %>
</p>

<p>
  <strong>Status:</strong>
  <%= @incident.status %>
</p>

<p>
  <strong>Started at:</strong>
  <%= @incident.started_at %>
</p>

<p>
  <strong>Detected at:</strong>
  <%= @incident.detected_at %>
</p>

<%= link_to 'Edit', edit_incident_path(@incident), class: 'btn btn-default' %>

<div id="comments-container" data-incident-id="<%= @incident.id %>">
  <header>
    <h2>Comments <small>(Live updating)</small></h2>
    <%= render 'loader' %>
  </header>

  <div id="comments-list"></div>
  <h4 class="text-danger hidden">Error loading new comments</h4>

  <%= link_to 'New Comment', new_incident_comment_path(@incident), class: 'btn btn-default' %>
</div>
